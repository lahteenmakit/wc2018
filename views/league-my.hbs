{{> header }}

<div class="ui container">
	{{#if messages.update}}
		<div class="ui positive message">
			<div class="header">
			  {{messages.update}}
			</div>
		</div>
	{{/if}}
	{{#if messages.warning}}
		<div class="ui warning message">
			<div class="header">
			  {{messages.warning}}
			</div>
		</div>
	{{/if}}
	<h1>My Leagues</h1>
	<div class="ui list">
	{{#each leagues}}
		<div class="item"><a href="/league/{{this.league_id}}">{{this.name}}</a></div>
	{{/each}}
	<br>
	<div class="item"><a href="/league/join" style="color:#20B2AA;">Join a league</a></div>
	<div class="item"><a href="/league/create" style="color:#20B2AA;">Create new league</a></div>
	</div>
</div>
