{{> quiz-header}}

<div id="standingsTableDiv" class="container">
  <div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <h1>Final standings of the Fifa World cup 2018</h1>
  <p>Guess the TOP 3 teams of the tournament.</p>
  <p>Points: <br>
    Both team AND place correct: <b>5 points</b><br>
    Team correct but place incorrect: <b>2 points</b><br>
  </p>
  <div id="matchesForm" class="container">
    <form method="POST" action="/quiz/standings">
      <table class="table">
        <tr>
          <td>Champion</td>
          <td>
            <select name="standings_champion" class="selectpicker">
              {{#each teams}}
                <option value="{{this.team}}">{{this.team}}</option>
              {{/each}}
            </select>
          </td>
        </tr>
        <tr>
          <td>Runner-up</td>
          <td>
            <select name="standings_runnerUp" class="selectpicker">
              {{#each teams}}
                <option value="{{this.team}}">{{this.team}}</option>
              {{/each}}
            </select>
          </td>
        </tr>
        <tr>
          <td>3rd place</td>
          <td>
            <select name="standings_thirdPlace" class="selectpicker">
              {{#each teams}}
                <option value="{{this.team}}">{{this.team}}</option>
              {{/each}}
            </select>
          </td>
        </tr>
      </table>
      <button type="submit" class="btn btn-primary">Submit your answers</button>
    </form>
  </div>
</div>
