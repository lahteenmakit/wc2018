{{> header }}

<div class="ui container">
	<h1>Create a new league</h1>
	<p>Insert name and password for your league. <b>Don't forget your password - other users will use it to join your league.</b></p>
	<form method="POST" action="/league/create" class="ui form">
		<div class="field">
		    <label>League name</label>
		    <input type="text" name="leagueName" placeholder="Name" required>
  		</div>
  		<div class="field">
		    <label>League password</label>
		    <input type="password" name="leaguePassword" placeholder="Password" required>
  		</div>
    	<input type="submit" class="ui positive basic button" value="Create league" />
	</form>
</div>
