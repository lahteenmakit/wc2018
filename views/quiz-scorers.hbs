{{> quiz-header}}

<div id="matchesTableDiv" class="container">
  <div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <h1>Top scorers of the Fifa World cup 2018</h1>
  <p>Guess the TOP 3 scoring players of the tournament.</p>
  <p>Points: <br>
    Both player AND number of goals correct <b>10 points</b><br>
    Player correct but goals incorrect: <b>3 points</b><br>
  </p>
  <div id="matchesForm" class="container">
    <form method="POST" action="/quiz/scorers">
      <table class="table table-striped">
        <tbody>
          {{#each matches}}
            <tr>
              <td>{{this.date}} <br>
                  {{this.groupNumber}} <br>
                  {{this.location}} <br>
              </td>
              <td>{{this.homeTeam}}
                  <input class="form-control" name="{{addOne @index}}-homeGoals" type='number' min='0' placeholder="Goals" required>
              </td>
              <td>{{this.awayTeam}}
                  <input class="form-control" name="{{addOne @index}}-awayGoals" type='number' min='0' placeholder="Goals" required>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <button type="submit" class="btn btn-primary">Submit match results</button>
    </form>

  </div>
</div>
