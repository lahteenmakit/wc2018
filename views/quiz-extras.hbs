{{> quiz-header}}

<div id="matchesTableDiv" class="container">
  <div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <h1>Extra Questions</h1>
  <p>Guess the answers to the following questions.</p>
  <p>Points: <b> One point for each correct answer </b></p>
  <div id="matchesForm" class="container">
    <form method="POST" action="/quiz/extras">
      <table class="table table-striped">
        <tbody>
          {{#each matches}}
            <tr>
              <td>{{this.date}} <br>
                  {{this.groupNumber}} <br>
                  {{this.location}} <br>
              </td>
              <td>{{this.homeTeam}}
                  <input class="form-control" name="{{addOne @index}}-homeGoals" type='number' min='0' placeholder="Goals" required>
              </td>
              <td>{{this.awayTeam}}
                  <input class="form-control" name="{{addOne @index}}-awayGoals" type='number' min='0' placeholder="Goals" required>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <button type="submit" class="btn btn-primary">Submit your answers</button>
    </form>

  </div>
</div>
