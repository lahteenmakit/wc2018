{{> header }}

{{#if join}}
    <div class="ui message">
	  <i class="close icon"></i>
	  <div class="header">
	    Welcome to {{this.name}}!
	  </div>
	</div>
{{/if}}

<div class="ui container">
	<h1>Welcome to {{usersInLeague.0.league_name}}!</h1>
	<h2>Rankings</h2>
	<div>
		<table class="ui celled table">
			<thead>
			    <tr>
			    	<th>Rank</th>
				    <th>User</th>
				    <th>Points</th>
			  	</tr>
			</thead>
			<tbody>
				{{#each usersInLeague}}
					<tr>
						<td class="collapsing">{{getRank @index}}</td>
						<td><a href="/league/{{this.league_id}}/user/{{this.user_id}}">{{this.username}}</a></td>
						<td>{{this.points}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
